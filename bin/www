io.sockets.on('connection', function (socket) {
  console.log(`Có người đã kết nối: ,${socket.id}`);
  IdUser = "5f742959bda71603f88e8d9e";
  NotificationService.findByIdNotification(IdUser, (err, data) => {
      socket.emit('output', data);
  });
  socket.on('input', function (data) {
    let IdUser = data.IdUser;
    let Content = data.Content;
    // Check for name and message
    if (IdUser == '' || Content == '') {
      // Send error status
      sendStatus('Please enter a name and message');
    } else {
      // Insert message
      let dataNotify = {};
      dataNotify.Content = Content;
      dataNotify.IdUser = IdUser;
      dataNotify.URL = Content;
      // moment().format('HH:mm:ss DD-MM-YYYY ')
      NotificationService.createNotification(dataNotify, (err, dataRes) => {
        // console.log("dataRes", dataRes);
        socket.emit('output', [dataRes]);
        // Send status object

        // Emit the messages
        // socket.emit('output', res);
        sendStatus({
          message: 'Message sent',
          clear: true
        });
      });


    }
  });

  socket.on('update', function (data) {
    let IdNotification = data.id;
    // Check for name and message
    if (IdNotification == '') {
      // Send error status
      sendStatus('Please enter a name and message');
    } else {
      // update message
      let dataNotify = {};
      // moment().format('HH:mm:ss DD-MM-YYYY ')
      NotificationService.updateNotification(IdNotification, dataNotify, (err, dataRes) => {
        // Emit the messages
        NotificationService.findByIdNotification(IdUser, (err, data) => {
          socket.emit('edited', data);
        })
        sendStatus({
          message: 'Message sent',
          clear: true
        });
      });
    }
  });
  socket.on('delete', function (data) {
    // Remove all chats from collection
    NotificationService.DeleteByIdNotification(data.id, (err, data) => {
      NotificationService.findByIdNotification(IdUser, (err, resData) => {
        socket.emit('cleared', resData);
      })
      // Emit cleared

    });
  });
  sendStatus = function (s) {
    socket.emit('status', s);
  }
});
/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port, host, function () {
  console.log(`App listening on ${host}:${port}!`)
});
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
